extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Período #{periodo.id}
        a.w3-btn.w3-round.w3-khaki(href="/") Início
    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li
          b Nome:
          span= periodo.nome
        li
          b Compositores:
          each compositor, id in periodo.compositores
            a(href="/compositores/" + id)= compositor
    .footer.w3-container.w3-teal
      h5 
        span Gerado por EngWeb2024 in #{date} - [
        a(href="/periodos") Voltar
        span ]