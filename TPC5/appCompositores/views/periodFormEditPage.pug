extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h2 Period Form
        a.w3-btn.w3-round.w3-khaki(href="/") In√≠cio
    form.w3-container(method="POST")
      fieldset 
        legend Metadata
        label
          b Id:
          input.w3-input.w3-round(type="text" name="id" readonly value=periodo.id)
        label
          b Nome:
          input.w3-input.w3-round(type="text" name="nome" value=periodo.nome)
        label
          b Bio:
          - let composers = JSON.stringify(periodo.compositores).replace(/\n/g, "")
          input.w3-input.w3-round(type="textarea" name="bio" value=composers)
      br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
    footer.w3-container.w3-purple
      h5
        span Generated by EngWeb2024 in #{date} - [
        a(href="/periodos") Return
        span ]